<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:gravity="center_vertical"
        android:background="@mipmap/headtablet1">
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:background="@mipmap/ico_menu"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@mipmap/img_exercises">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:layout_weight="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:textColor="@color/TextColor"
                        android:textSize="28sp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="30dp"
                        android:background="@mipmap/ico_back"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/exp_activity">
                    <LinearLayout
                        android:id="@+id/standard"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:background="@drawable/rect_edit_bouns_button">
                        <TextView
                            android:id="@+id/tv_standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:text="Standard"
                            android:textStyle="bold"
                            android:textColor="@color/colorOrange"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:layout_weight="3">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/lay_one"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/rect_edit_bouns_button">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@mipmap/lock"
                                    android:id="@+id/imageView" />
                                <TextView
                                    android:id="@+id/tv_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    android:textColor="@color/colorOrange"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/lay_two"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/rect_edit_bouns_button">
                                <ImageView
                                    android:id="@+id/iv_lock2"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@mipmap/lock"/>
                                <TextView
                                    android:id="@+id/tv_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="25sp"
                                    android:textColor="@color/colorOrange"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/lay_three"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/rect_edit_bouns_button">
                                <ImageView
                                    android:id="@+id/iv_lock3"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@mipmap/lock"/>
                                <TextView
                                    android:id="@+id/tv_three"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="25sp"
                                    android:textColor="@color/colorOrange"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1">
                    <ExpandableListView
                        android:id="@+id/exp_activity"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="#00000000"
                        android:dividerHeight="5dp">
                    </ExpandableListView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>