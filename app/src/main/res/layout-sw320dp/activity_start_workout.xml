<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:gravity="center_vertical"
        android:background="@mipmap/headtablet1">
        <ImageView
            android:id="@+id/iv_menu_intro"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/ico_menu"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img_standard"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:layout_weight="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:textColor="@color/TextColor"
                        android:textSize="16sp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/ico_back"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:layout_weight="10">
                <ImageView
                    android:id="@+id/iv_movie"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/movie_f_orange"/>
                <ImageView
                    android:id="@+id/iv_note"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/note_f_orange"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/lay_select_view"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1.2">
                    <TextView
                        android:id="@+id/tv_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STAY IN POSTION TAP PLAY TO START"
                        android:textStyle="bold"
                        android:textColor="@color/colorCountOrange"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:textSize="30sp" />
                    <TextView
                        android:id="@+id/tv_count_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textColor="@color/colorCountOrange"
                        android:textSize="90dp" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_weight="2">
                    <ImageView
                        android:id="@+id/iv_startimage"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/ico_down"/>
                    <TextView
                        android:id="@+id/tv_selectexercises_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorCountOrange"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1.7">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:layout_weight="2">
                        <LinearLayout
                            android:id="@+id/lay_tap"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:background="@mipmap/timer_org">
                            <TextView
                                android:id="@+id/tv_nextcounter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:layout_marginTop="5dp"
                                android:textSize="35sp"
                                android:textColor="@color/colorWhite"
                                android:text="30"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:layout_weight="1.5">
                                    <ImageView
                                        android:id="@+id/iv_backward"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@mipmap/timer_back"/>
                                    <ImageView
                                        android:id="@+id/iv_forward"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="15dp"
                                        android:background="@mipmap/timer_forward"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:layout_weight="1">
                                    <ImageView
                                        android:id="@+id/iv_stop"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@mipmap/timer_pause1"/>
                                    <ImageView
                                        android:id="@+id/iv_close"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="20dp"
                                        android:background="@mipmap/timer_close"/>
                                    <ImageView
                                        android:id="@+id/iv_repeat"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@mipmap/timer_refresh"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/lay_step"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical"
                                android:layout_weight="1">
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>