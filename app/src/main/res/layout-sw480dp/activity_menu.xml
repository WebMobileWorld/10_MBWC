<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:gravity="center_vertical"
        android:background="@mipmap/headtablet1">
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:background="@mipmap/ico_menu"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lay_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@mipmap/img_intro">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_exercises"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@mipmap/img_exercises">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_start_workout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@mipmap/img_start_burning">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_my_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@mipmap/img_my_results">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_extra_workouts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@mipmap/img_extra_workout">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@mipmap/img_calendar">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_remind_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@mipmap/img_remindme">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>